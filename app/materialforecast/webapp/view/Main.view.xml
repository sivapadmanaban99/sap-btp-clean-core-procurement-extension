<mvc:View
    controllerName="materialforecast.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <App>
        <Page title="Material Forecast">
            <content>
                <VBox>
                    <Text text="Material Forecast Data"/>
                    <Table id="materialTable" items="{/MaterialForecast}" mode="MultiSelect">
                        <columns>
                            <Column><Text text="Material"/></Column>
                            <Column><Text text="Plant"/></Column>
                            <Column><Text text="Period"/></Column>
                            <Column><Text text="Qty Issued"/></Column>
                            <Column><Text text="Stock"/></Column>
                            <Column><Text text="Forecast Qty"/></Column>                            
                            <Column><Text text="Reorder Qty"/></Column>
                            <Column><Text text="Risk"/></Column>
                        </columns>
                        <items>
                            <ColumnListItem>
                                <cells>
                                    <Text text="{Material}"/>
                                    <Text text="{Plant}"/>
                                    <Text text="{HistPeriod}"/>                                    
                                    <Text text="{QtyIssued}"/>
                                    <Text text="{StockOnHand}"/>
                                    <Text text="{ForecastQty}"/>                                    
                                    <Text text="{SuggestedReorder}"/>
                                    <ObjectStatus
                                        text="{RiskFlag}"
                                        state="{path: 'RiskFlag', formatter: '.formatRiskState'}"/>

                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </VBox>
            </content>
            <footer>
                <Toolbar>
                    <Button text="Run Forecast" press="onRunForecast"/>
                </Toolbar>
            </footer>
        </Page>
    </App>
</mvc:View>